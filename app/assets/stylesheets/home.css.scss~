        };
        @include screen-medium {
            height: 337px;
            width: 600px;
            margin-top: (-337px / 2);
            margin-left: (-600px / 2);
        };
        @include screen-large {
            height: 450px;
            width: 800px;
            margin-top: (-450px / 2);
            margin-left: (-800px / 2);
        };
    };

    &.hidden {
        @include transition(all 0.5s, z-index 0s ease 0.5s);
        opacity: 0;
        z-index: -1;

        iframe {
            @include transform(scale(0, 0));
            @include opacity(0);
        }
    };

    &.showing {
        @include transition(all 0.5s, z-index 0s);
        opacity: 1;
        z-index: 20;

        iframe {
            @include transform(scale(1, 1));
            @include opacity(1);
        }
    };
}

