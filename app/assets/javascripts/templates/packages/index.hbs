<section class="section-normal">
    <div class="content row">
        <div class="side col">
            {{#linkTo index}}<div class="registration-logo"></div>{{/linkTo}}
            <div class="box-clear">
                <h2>Your registration includes:</h2>
                <ul>
                    <li>Access to <strong>ALL</strong> events.</li>
                    <li>A standard-issue F!rosh Kit with tons of cool stuff</li> <!-- (learn more) TODO(johnliu): Make this a link. -->
                    <li>Free lunch and dinner during full days (Monday and Tuesday)</li>
                    <li>One free Skule yearbook at the end of the year ($20 value)</li>
                </ul>
            </div>
        </div>

        <div class="main col">
            <div class="box-normal">
                <h1>Register <strong>online</strong>!</h1>
                <!-- TODO(johnliu): Remove inline CSS -->
                <h3 class="small">Early Bird Pricing: <span class="red">20% OFF</span> until August 15!</h3>
                <ul class="registration-items">
                    {{#each model}}
                        <li class="">
                            {{#linkTo packages.item this}}
                                {{description}} <strong>${{price}}</strong>
                            {{/linkTo}}
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</section>
