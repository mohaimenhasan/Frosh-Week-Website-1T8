<div class="box normal">
    <h1><i class="icon-bar-chart"></i> Dashboard</h1>

    <div {{bindAttr class=":admin-loader :center isLoading:showing:hidden"}}>
        <i class="icon-big-loader icon-spin icon-gear"></i>
    </div>

    <div {{bindAttr class=":admin-data isLoading:hidden:showing"}}>
        <p>
            Today is {{timestamp today format="dddd, MMMM Do YYYY"}}.
            There {{pluralize registrationsToday string="is" plural="are"}} {{registrationsToday}} new
            {{pluralize registrationsToday string="registration"}} today.
            There are a total of {{users.length}} registrants.
        </p>
    </div>
    <ul>
        {{#each group in groups}}
            <li {{bindAttr class=":admin-data isLoading:hidden:showing"}}>
                <strong>{{{group.symbol}}} {{group.name}}</strong> - {{subset users group}}<br>
                Male: {{subset users group gender="Male"}}<br>
                Female: {{subset users group gender="Female"}}<br>
                Engineering Science: {{subset users group discipline="Engineering Science"}}<br>
                Track One: {{subset users group discipline="Track One"}}<br>
                Chemical: {{subset users group discipline="Chemical"}}<br>
                Civil: {{subset users group discipline="Civil"}}<br>
                Computer: {{subset users group discipline="Computer"}}<br>
                Electrical: {{subset users group discipline="Electrical"}}<br>
                Industrial: {{subset users group discipline="Industrial"}}<br>
                Material Science: {{subset users group discipline="Material Science"}}<br>
                Mechanical: {{subset users group discipline="Mechanical"}}<br>
                Mineral: {{subset users group discipline="Mineral"}}<br>
                <br>
            </li>
        {{/each}}
    </ul>

