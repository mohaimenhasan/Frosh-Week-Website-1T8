<!-- TODO(johnliu): style this form -->
{{#formFor content wrapper="orientation"}}
    <!-- TODO(johnliu): Hidden CSRF -->
    <div class="registration-step">
        <div class="registration-step-num">1</div>
        <h2>Tell us about yourself</h2>

        <div class="subsection text">
            {{#input firstName}}
                {{labelField firstName text="First name"}}
                {{inputField firstName placeholder="Jane"}}
            {{/input}}
            {{#input lastName}}
                {{labelField lastName text="Last name"}}
                {{inputField lastName placeholder="Smith"}}
            {{/input}}
            {{#input email}}
                {{labelField email text="Your email address"}}
                {{inputField email as=email placeholder="jane@example.com"}}
            {{/input}}
            <div class="text-inline">
                <label>Phone number</label>
                <div class="input-inline-group">
                    {{#input phoneAreaCode}}
                        {{inputField phoneAreaCode as=tel placeholder="647" inputConfig="class:phone phone-area"}}
                    {{/input}}
                    {{#input phoneStart}}
                        {{inputField phoneStart as=tel placeholder="123" inputConfig="class:phone phone-start"}}
                    {{/input}}
                    {{#input phoneEnd}}
                        {{inputField phoneEnd as=tel placeholder="5678" inputConfig="class:phone phone-end"}}
                    {{/input}}
                </div>
            </div>
            {{#input discipline}}
                {{labelField discipline text="Engineering discipline"}}
                {{inputField discipline placeholder="Engineering Science"}}
            {{/input}}
            {{#input residence}}
                {{labelField residence text="Residence"}}
                {{inputField residence placeholder="Chestnut"}}
            {{/input}}
        </div>
    </div>

    <div class="registration-step">
        <div class="registration-step-num">2</div>
        <h2>Customize your F!rosh Kit</h2>

        <div class="subsection radio">
            <span class="input"><label>What's your t-shirt size?</label></span>
            <div class="choices">
                {{#input shirtSizeS}}
                    {{inputField shirtSizeS as=radio inputConfig="name:shirt"}}
                    {{labelField shirtSizeS text="S"}}
                {{/input}}
                {{#input shirtSizeM}}
                    {{inputField shirtSizeM as=radio inputConfig="name:shirt"}}
                    {{labelField shirtSizeM text="M"}}
                {{/input}}
                {{#input shirtSizeL}}
                    {{inputField shirtSizeL as=radio inputConfig="name:shirt"}}
                    {{labelField shirtSizeL text="L"}}
                {{/input}}
                {{#input shirtSizeX}}
                    {{inputField shirtSizeX as=radio inputConfig="name:shirt"}}
                    {{labelField shirtSizeX text="XL"}}
                {{/input}}
            </div>
        </div>
    </div>

    <div class="registration-step">
        <div class="registration-step-num">3</div>
        <h2>Health and safety information</h2>

        <div class="subsection text">
            <h3>Emergency contact</h3>
            {{#input emergencyName}}
                {{labelField emergencyName text="Name"}}
                {{inputField emergencyName placeholder="John"}}
            {{/input}}
            {{#input emergencyEmail}}
                {{labelField emergencyEmail text="Email address"}}
                {{inputField emergencyEmail as=email placeholder="john@example.com"}}
            {{/input}}
            {{#input emergencyRelationship}}
                {{labelField emergencyRelationship text="Relationship"}}
                {{inputField emergencyRelationship placeholder="Father"}}
            {{/input}}
            <div class="text-inline">
                <label>Phone number</label>
                <div class="input-inline-group">
                    {{#input emergencyPhoneAreaCode}}
                        {{inputField emergencyPhoneAreaCode as=tel placeholder="647" inputConfig="class:phone phone-area"}}
                    {{/input}}
                    {{#input emergencyPhoneStart}}
                        {{inputField emergencyPhoneStart as=tel placeholder="123" inputConfig="class:phone phone-start"}}
                    {{/input}}
                    {{#input emergencyPhoneEnd}}
                        {{inputField emergencyPhoneEnd as=tel placeholder="5678" inputConfig="class:phone phone-end"}}
                    {{/input}}
                </div>
            </div>
        </div>

        <div class="subsection">
            <h3>List any dietary restrictions you may have.</h3>
            {{#input restrictionsDietary}}
                {{hintField restrictionsDietary text="Examples include: Halal, Kosher, vegetarian, peanut allergies"}}
                {{inputField restrictionsDietary as=text}}
            {{/input}}
        </div>

        <div class="subsection">
            <h3>List any accessibility requirements you may need.</h3>
            {{#input restrictionsAccessibility}}
                {{hintField restrictionsAccessibility text="F!rosh Week is committed to U of T's accessibility guidelines."}}"
                {{inputField restrictionsAccessibility as=text}}
            {{/input}}
        </div>

        <div class="subsection">
            <h3>Anything else we should know?</h3>
            {{#input restrictionsMisc}}
                {{inputField restrictionsMisc as=text}}
            {{/input}}
        </div>
    </div>

    <div class="registration-step">
        <div class="registration-step-num">4</div>
        <h2>How will you be paying?</h2>

        <div class="subsection">
            <h3>Would you like to apply for the F!rosh Week bursary?</h3>
            <span class="input">
                <label>
                    You may apply if you qualify for OSAP; bursaries will be awarded based on need.
                    You will need to fill out an additional short application.
                </label>
            </span>
            <div class="checkboxes">
                {{#input bursary}}
                    {{inputField bursary as=checkbox}}{{labelField bursary text="Yes"}}
                {{/input}}
            </div>
        </div>

        <div class="subsection text">
            <h3>Pay by credit card</h3>
            <h4 class="small">Secure connection</h4>
            {{#input cardName}}
                {{labelField cardName text="Name on card"}}
                {{inputField cardName placeholder="Jane Smith"}}
            {{/input}}
            <div class="text-inline">
                <label>Card number</label>
                <div class="input-inline-group">
                    {{#input cardNum}}
                        {{inputField cardNum as=tel inputConfig="class:cc cc-number"}}
                    {{/input}}
                    {{#input cardCVC}}
                        {{inputField cardCVC as=tel placeholder="CVC" inputConfig="class:cc cc-cvc"}}
                    {{/input}}
                </div>
            </div>
            <div class="text-inline">
                <label>Expires</label>
                <div class="input-inline-group end">
                    {{#input cardExpirationMonth}}
                        {{inputField cardExpirationMonth as=tel placeholder="MM" inputConfig="class:cc cc-month"}}
                    {{/input}}
                    {{#input cardExpirationYear}}
                        {{inputField cardExpirationYear as=tel placeholder="YY" inputConfig="class:cc cc-year"}}
                    {{/input}}
                </div>
            </div>
        </div>

        <div class="right-align">
            {{submit "Pay and register"}}
        </div>
    </div>
{{/formFor}}
